{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "types": ["@cloudflare/workers-types", "@types/bun", "@types/node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
